<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="account_invoice_costeo_form_view" model="ir.ui.view">
		<field name="name">account.invoice.costeo.form.view</field>
		<field name="model">account.invoice</field>
		<field name="inherit_id" ref="account.invoice_supplier_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
				<field name="batch_id" options="{'no_create': True}"/>
			</xpath>
		</field>
	</record>

	<record id="account_invoice_line_costeo_tree_view" model="ir.ui.view">
		<field name="name">account.invoice.line.costeo.tree.view</field>
		<field name="model">account.invoice.line</field>
		<field name="inherit_id" ref="account.view_invoice_line_tree"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='name']" position="after">
				<field name="batch_id" options="{'no_create': True}"/>
			</xpath>
		</field>
	</record>

	<record id="account_invoice_line_costeo_form_view" model="ir.ui.view">
		<field name="name">account.invoice.line.costeo.form.view</field>
		<field name="model">account.invoice.line</field>
		<field name="inherit_id" ref="account.view_invoice_line_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="batch_id" options="{'no_create': True}"/>
			</xpath>
		</field>
	</record>
</odoo>