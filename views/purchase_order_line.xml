<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="purchase_order_line_batch_form" model="ir.ui.view">
		<field name="name">purchase.order.line.form</field>
		<field name="model">purchase.order</field>
		<field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
        	<xpath expr="/form/sheet/notebook/page/field/tree/field[@name='date_planned']" position="after">
                <field name="batch"/>
            </xpath>
            <xpath expr="/form/sheet/notebook/page/field/tree/field[@name='date_planned']" position="after">
                <field name="fleet"/>
            </xpath>
        </field>
    </record>

<!-- LINEAS DE PEDIDO DE COMPRA -->
    <record id="purchase_order_line_menu_view_tree" model="ir.ui.view">
    	<field name="name">Lineas de Pedidos de Compra</field>
    	<field name="model">purchase.order.line</field>
    	<field name="arch" type="xml">
    		<tree string="Lineas de Pedido">
    			<field name="order_id"/>	
    			<field name="partner_id"/>
    			<field name="product_id"/>
    			<field name="name"/>
    			<field name="date_planned"/>
    			<field name="fleet_id"/>
    			<field name="fleet"/>
    			<field name="batch_id"/>
    			<field name="batch"/>
    			<field name="location_dest_id"/>
    			<field name="product_uom"/>
    			<field name="price_unit"/>
    			<field name="taxes_id" widget="many2manytags"/>
    			<field name="price_subtotal"/>
    			<field name="state"/>
    		</tree>
    	</field>
    </record>

    <record id="purchase_order_line_menu_view_action" model="ir.actions.act_window">
        <field name="name">Lineas de Pedidos de Compra</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="purchase_order_line_menu_view_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click para establecer una nueva linea</p>
        </field>
    </record>

    <menuitem id="purchase_order_line_menu" parent="purchase.menu_procurement_management"
              action="purchase_order_line_menu_view_action" sequence="30"/>

</odoo>