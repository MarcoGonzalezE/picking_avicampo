<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sot_stock_picking_type_form_view" model="ir.ui.view">
        <field name="name">stock.picking.operator.form.view</field>
        <field name="model">stock.picking.operator</field>
        <field name="arch" type="xml">
            <form string="Operator">
                <sheet>
                    <group>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </group>                    
                    <group>                             
                            <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 
    <record id="sot_stock_picking_type_tree_view" model="ir.ui.view">
        <field name="name">stock.picking.operator.tree.view</field>
        <field name="model">stock.picking.operator</field>
        <field name="arch" type="xml">
            <tree string="Operator">
                <field name="name"/>        
            </tree>
        </field>
    </record>

    <record id="sot_stock_picking_type_search_view" model="ir.ui.view">
        <field name="name">stock.picking.operator.search.view</field>
        <field name="model">stock.picking.operator</field>
        <field name="arch" type="xml">
            <search string="Operator">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="sot_stock_picking_type_action" model="ir.actions.act_window">
        <field name="name">Destino Operadores</field>
        <field name="res_model">stock.picking.operator</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="sot_stock_picking_type_tree_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Click para establecer un nuevo operador</p>
        </field>
    </record>

    <record id="sot_stock_picking_type_action_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sot_stock_picking_type_form_view"/>
        <field name="act_window_id" ref="sot_stock_picking_type_action"/>
    </record>

    <record id="sot_stock_picking_type_action_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sot_stock_picking_type_tree_view"/>
        <field name="act_window_id" ref="sot_stock_picking_type_action"/>
    </record>

    <menuitem id="sot_stock_picking_type_menu" parent="sales_team.menu_sale_config"
              action="sot_stock_picking_type_action" sequence="20"/>

</odoo>
