<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record  id="stock_picking_view_stock_picking_form" model="ir.ui.view">
		<field name="name">stock.picking.form</field>
		<field name="model">stock.picking</field>        
		<field name="inherit_id" ref="stock.view_picking_form"/>
		<field name="arch" type="xml">			
            <xpath expr="/form/sheet/notebook/page[3]/group/group/field[@name='priority']" position="after">
                    <field name="sello"/>    
            </xpath>
            <xpath expr="/form/sheet/notebook/page[3]/group/group/field[@name='priority']" position="after">
                    <field name="ticket" />    
            </xpath>
            <xpath expr="/form/sheet/notebook/page[3]/group/group/field[@name='priority']" position="after">
                    <field name="date_trans"/>    
            </xpath>
            <xpath expr="/form/sheet/notebook/page[3]/group/group/field[@name='priority']" position="after">
                    <field name="date_delivery"/>    
            </xpath>
            <xpath expr="/form/sheet/notebook/page[3]/group/group/field[@name='priority']" position="after">
                    <field name="folio"/>    
            </xpath>
            <xpath expr="/form/sheet/notebook/page[3]/group/group/field[@name='priority']" position="after">
                <field name="batch_id"/> 
            </xpath>
        </field>
    </record>
