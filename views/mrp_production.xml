<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="movimientos_produccion_form_inherited" model="ir.ui.view">
            <field name="name">Momivientos Produccion</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_scrap']" position="after">
                    <button name="movimientos" string="Sumar Movimientos" type="object" class="oe_highlight"/>                    
                </xpath>
                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Movimientos">
                        <field name="move_ids">
                            <tree>
                                <field name="product_id"/>
                                <field name="qty"/>
                                <field name="price_total"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>